<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-briefcase"></i> Commesse</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Numero</th>
                            <th>Ospedale</th>
                            <th>Preventivo</th>
                            <th>Data Apertura</th>
                            <th>Budget</th>
                            <th>Speso</th>
                            <th>Scostamento</th>
                            <th>Stato</th>
                            <th>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (workOrders.length === 0) { %>
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    Nessuna commessa presente
                                </td>
                            </tr>
                        <% } else { %>
                            <% workOrders.forEach(w => { %>
                                <tr>
                                    <td><strong><%= w.numero_commessa %></strong></td>
                                    <td><%= w.hospital_name %></td>
                                    <td><%= w.numero_preventivo || '-' %></td>
                                    <td><%= new Date(w.data_apertura).toLocaleDateString('it-IT') %></td>
                                    <td>€ <%= parseFloat(w.budget_previsto).toFixed(2) %></td>
                                    <td>€ <%= parseFloat(w.totale_speso).toFixed(2) %></td>
                                    <td>
                                        <% const scost = parseFloat(w.scostamento); %>
                                        <span class="<%= scost > 0 ? 'text-danger' : scost < 0 ? 'text-success' : '' %>">
                                            <%= scost > 0 ? '+' : '' %>€ <%= scost.toFixed(2) %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (w.stato === 'da_iniziare') { %>
                                            <span class="badge bg-warning text-dark">Da Iniziare</span>
                                        <% } else if (w.stato === 'in_corso') { %>
                                            <span class="badge bg-primary">In Corso</span>
                                        <% } else if (w.stato === 'completata') { %>
                                            <span class="badge bg-success">Completata</span>
                                        <% } else { %>
                                            <span class="badge bg-info">Fatturata</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/work-orders/view/<%= w.id %>" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
