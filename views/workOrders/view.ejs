<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-briefcase"></i> Commessa <%= workOrder.numero_commessa %></h1>
        <a href="/work-orders" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Torna alla Lista
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Intestazione -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary">COMMESSA</h5>
                            <h3><%= workOrder.numero_commessa %></h3>
                            <p class="mb-1">
                                <strong>Preventivo:</strong> <%= workOrder.numero_preventivo || 'N/D' %>
                            </p>
                            <p class="mb-1">
                                <strong>Apertura:</strong> <%= new Date(workOrder.data_apertura).toLocaleDateString('it-IT') %>
                            </p>
                            <% if (workOrder.data_chiusura) { %>
                                <p class="mb-1">
                                    <strong>Chiusura:</strong> <%= new Date(workOrder.data_chiusura).toLocaleDateString('it-IT') %>
                                </p>
                            <% } %>
                        </div>
                        <div class="col-md-6 text-end">
                            <h5>CLIENTE</h5>
                            <p class="mb-1"><strong><%= workOrder.hospital_name %></strong></p>
                            <% if (workOrder.indirizzo) { %>
                                <p class="mb-1"><%= workOrder.indirizzo %></p>
                            <% } %>
                            <% if (workOrder.citta) { %>
                                <p class="mb-1"><%= workOrder.citta %></p>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <div>
                        <strong>Descrizione:</strong>
                        <p class="mb-0"><%= workOrder.descrizione %></p>
                    </div>
                    <% if (workOrder.note) { %>
                        <div class="mt-2">
                            <strong>Note:</strong>
                            <p class="mb-0"><%= workOrder.note %></p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Riepilogo Economico -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Riepilogo Economico</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td><strong>Budget Previsto:</strong></td>
                                    <td class="text-end">€ <%= parseFloat(workOrder.budget_previsto).toFixed(2) %></td>
                                </tr>
                                <tr>
                                    <td>Manodopera:</td>
                                    <td class="text-end">€ <%= totals.manodopera.toFixed(2) %></td>
                                </tr>
                                <tr>
                                    <td>Materiali:</td>
                                    <td class="text-end">€ <%= totals.materiali.toFixed(2) %></td>
                                </tr>
                                <tr>
                                    <td>Trasferte:</td>
                                    <td class="text-end">€ <%= totals.trasferte.toFixed(2) %></td>
                                </tr>
                                <tr class="table-light">
                                    <td><strong>Totale Speso:</strong></td>
                                    <td class="text-end"><strong>€ <%= totals.totale.toFixed(2) %></strong></td>
                                </tr>
                                <tr class="<%= workOrder.scostamento > 0 ? 'table-danger' : workOrder.scostamento < 0 ? 'table-success' : '' %>">
                                    <td><strong>Scostamento:</strong></td>
                                    <td class="text-end">
                                        <strong>
                                            <%= workOrder.scostamento > 0 ? '+' : '' %>€ <%= parseFloat(workOrder.scostamento).toFixed(2) %>
                                            (<%= workOrder.budget_previsto > 0 ? ((workOrder.scostamento / workOrder.budget_previsto) * 100).toFixed(1) : 0 %>%)
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Form Aggiungi Attività -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Aggiungi Nuova Attività
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/work-orders/add-activity/<%= workOrder.id %>" id="activityForm">
                        <!-- Dati Attività -->
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Data Intervento *</label>
                                <input type="date" name="data_attivita" class="form-control" 
                                       value="<%= new Date().toISOString().split('T')[0] %>" required>
                            </div>
                            <div class="col-md-8 mb-3">
                                <label class="form-label">Descrizione Lavoro *</label>
                                <input type="text" name="descrizione" class="form-control" 
                                       placeholder="es. Manutenzione cappe laboratorio" required>
                            </div>
                        </div>

                        <!-- Manodopera -->
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Ore Lavorate *</label>
                                <input type="number" name="ore_lavoro" class="form-control" 
                                       step="0.25" min="0" value="0" 
                                       onchange="calculateManodopera()" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Costo Orario € *</label>
                                <input type="number" name="costo_orario" class="form-control" 
                                       step="0.01" min="0" value="0" 
                                       onchange="calculateManodopera()" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Totale Manodopera €</label>
                                <input type="number" name="totale_manodopera" class="form-control" 
                                       step="0.01" readonly id="totaleManodopera" value="0">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Tipo Intervento</label>
                                <input type="text" name="tipo_intervento" class="form-control" 
                                       placeholder="es. Ordinaria">
                            </div>
                        </div>

                        <hr>

                        <!-- Materiali -->
                        <h6 class="mb-3">Materiali Utilizzati (opzionale)</h6>
                        <div id="materialsSection">
                            <div class="row mb-2">
                                <div class="col-md-5">
                                    <input type="text" name="materiali[0][descrizione]" class="form-control form-control-sm" 
                                           placeholder="Descrizione materiale">
                                </div>
                                <div class="col-md-2">
                                    <input type="number" name="materiali[0][quantita]" class="form-control form-control-sm" 
                                           placeholder="Qta" step="0.01" min="0" value="1">
                                </div>
                                <div class="col-md-2">
                                    <input type="number" name="materiali[0][prezzo_unitario]" class="form-control form-control-sm" 
                                           placeholder="Prezzo €" step="0.01" min="0">
                                </div>
                                <div class="col-md-2">
                                    <input type="number" name="materiali[0][totale]" class="form-control form-control-sm" 
                                           placeholder="Totale €" readonly>
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-sm btn-success w-100" onclick="addMaterial()">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <!-- Trasferta -->
                        <h6 class="mb-3">Trasferta (opzionale)</h6>
                        <div class="row">
                            <div class="col-md-2 mb-2">
                                <label class="form-label small">Km Percorsi</label>
                                <input type="number" name="km_percorsi" class="form-control form-control-sm" 
                                       step="0.1" min="0" onchange="calculateTrasferta()">
                            </div>
                            <div class="col-md-2 mb-2">
                                <label class="form-label small">Costo/Km €</label>
                                <input type="number" name="costo_km" class="form-control form-control-sm" 
                                       step="0.01" min="0" value="0.50" onchange="calculateTrasferta()">
                            </div>
                            <div class="col-md-2 mb-2">
                                <label class="form-label small">Pedaggi €</label>
                                <input type="number" name="pedaggi" class="form-control form-control-sm" 
                                       step="0.01" min="0" value="0" onchange="calculateTrasferta()">
                            </div>
                            <div class="col-md-2 mb-2">
                                <label class="form-label small">Vitto €</label>
                                <input type="number" name="vitto" class="form-control form-control-sm" 
                                       step="0.01" min="0" value="0" onchange="calculateTrasferta()">
                            </div>
                            <div class="col-md-2 mb-2">
                                <label class="form-label small">Alloggio €</label>
                                <input type="number" name="alloggio" class="form-control form-control-sm" 
                                       step="0.01" min="0" value="0" onchange="calculateTrasferta()">
                            </div>
                            <div class="col-md-2 mb-2">
                                <label class="form-label small">Totale Trasferta €</label>
                                <input type="number" name="totale_trasferta" class="form-control form-control-sm" 
                                       readonly id="totaleTrasferta" value="0">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small">Note Trasferta</label>
                            <input type="text" name="note_trasferta" class="form-control form-control-sm" 
                                   placeholder="Note aggiuntive">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Note Attività</label>
                            <textarea name="note" class="form-control" rows="2" 
                                      placeholder="Note aggiuntive sull'intervento"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Salva Attività
                        </button>
                    </form>
                </div>
            </div>

            <!-- Attività Registrate -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Attività Registrate</h5>
                </div>
                <div class="card-body">
                    <% if (activities.length === 0) { %>
                        <p class="text-muted text-center py-3">Nessuna attività registrata</p>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Data</th>
                                        <th>Tecnico</th>
                                        <th>Descrizione</th>
                                        <th>Ore</th>
                                        <th class="text-end">Totale</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% activities.forEach(a => { %>
                                        <tr>
                                            <td><%= new Date(a.data_attivita).toLocaleDateString('it-IT') %></td>
                                            <td><%= a.tecnico_name || 'N/D' %></td>
                                            <td><%= a.descrizione %></td>
                                            <td><%= parseFloat(a.ore_lavoro).toFixed(2) %>h</td>
                                            <td class="text-end"><strong>€ <%= parseFloat(a.totale_manodopera).toFixed(2) %></strong></td>
                                            <td>
                                                <button class="btn btn-sm btn-danger" 
                                                        onclick="deleteActivity(<%= a.id %>)"
                                                        title="Elimina">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Stato -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Stato Commessa</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <% if (workOrder.stato === 'da_iniziare') { %>
                            <h3><span class="badge bg-warning text-dark">Da Iniziare</span></h3>
                        <% } else if (workOrder.stato === 'in_corso') { %>
                            <h3><span class="badge bg-primary">In Corso</span></h3>
                        <% } else if (workOrder.stato === 'completata') { %>
                            <h3><span class="badge bg-success">Completata</span></h3>
                        <% } else { %>
                            <h3><span class="badge bg-info">Fatturata</span></h3>
                        <% } %>
                    </div>

                    <hr>

                    <div class="d-grid gap-2">
                        <% if (workOrder.stato === 'da_iniziare') { %>
                            <button onclick="changeWorkOrderStatus(<%= workOrder.id %>, 'in_corso')" 
                                    class="btn btn-primary">
                                <i class="bi bi-play-circle"></i> Inizia Lavori
                            </button>
                        <% } %>
                        
                        <% if (workOrder.stato === 'in_corso') { %>
                            <button onclick="changeWorkOrderStatus(<%= workOrder.id %>, 'completata')" 
                                    class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Completa
                            </button>
                        <% } %>
                        
                        <% if (workOrder.stato === 'completata') { %>
                            <button onclick="alert('Funzione fatturazione in sviluppo')" 
                                    class="btn btn-info">
                                <i class="bi bi-receipt"></i> Genera Fattura
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Progressione -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Avanzamento</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Completamento</span>
                            <span><%= workOrder.percentuale_completamento || 0 %>%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: <%= workOrder.percentuale_completamento || 0 %>%"
                                 aria-valuenow="<%= workOrder.percentuale_completamento || 0 %>" 
                                 aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>

                    <% const utilizzo = workOrder.budget_previsto > 0 ? (totals.totale / workOrder.budget_previsto * 100) : 0; %>
                    <div class="mb-2">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Budget Utilizzato</span>
                            <span><%= utilizzo.toFixed(1) %>%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar <%= utilizzo > 100 ? 'bg-danger' : utilizzo > 80 ? 'bg-warning' : 'bg-success' %>" 
                                 role="progressbar" style="width: <%= Math.min(utilizzo, 100) %>%">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Info aggiuntive -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informazioni</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1 small">
                        <strong>Creato da:</strong> <%= workOrder.created_by_name %>
                    </p>
                    <p class="mb-1 small">
                        <strong>Creato:</strong><br>
                        <%= new Date(workOrder.created_at).toLocaleString('it-IT') %>
                    </p>
                    <p class="mb-0 small">
                        <strong>Ultimo aggiornamento:</strong><br>
                        <%= new Date(workOrder.updated_at).toLocaleString('it-IT') %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
let materialCounter = 1;

function calculateManodopera() {
    const ore = parseFloat(document.querySelector('input[name="ore_lavoro"]').value) || 0;
    const costo = parseFloat(document.querySelector('input[name="costo_orario"]').value) || 0;
    const totale = ore * costo;
    document.getElementById('totaleManodopera').value = totale.toFixed(2);
}

function calculateTrasferta() {
    const km = parseFloat(document.querySelector('input[name="km_percorsi"]').value) || 0;
    const costoKm = parseFloat(document.querySelector('input[name="costo_km"]').value) || 0;
    const pedaggi = parseFloat(document.querySelector('input[name="pedaggi"]').value) || 0;
    const vitto = parseFloat(document.querySelector('input[name="vitto"]').value) || 0;
    const alloggio = parseFloat(document.querySelector('input[name="alloggio"]').value) || 0;
    
    const totale = (km * costoKm) + pedaggi + vitto + alloggio;
    document.getElementById('totaleTrasferta').value = totale.toFixed(2);
}

function addMaterial() {
    const section = document.getElementById('materialsSection');
    const newRow = document.createElement('div');
    newRow.className = 'row mb-2';
    newRow.innerHTML = `
        <div class="col-md-5">
            <input type="text" name="materiali[${materialCounter}][descrizione]" class="form-control form-control-sm" 
                   placeholder="Descrizione materiale">
        </div>
        <div class="col-md-2">
            <input type="number" name="materiali[${materialCounter}][quantita]" class="form-control form-control-sm" 
                   placeholder="Qta" step="0.01" min="0" value="1" onchange="calculateMaterial(${materialCounter})">
        </div>
        <div class="col-md-2">
            <input type="number" name="materiali[${materialCounter}][prezzo_unitario]" class="form-control form-control-sm" 
                   placeholder="Prezzo €" step="0.01" min="0" onchange="calculateMaterial(${materialCounter})">
        </div>
        <div class="col-md-2">
            <input type="number" name="materiali[${materialCounter}][totale]" class="form-control form-control-sm" 
                   placeholder="Totale €" readonly id="materialTotal${materialCounter}">
        </div>
        <div class="col-md-1">
            <button type="button" class="btn btn-sm btn-danger w-100" onclick="this.parentElement.parentElement.remove()">
                <i class="bi bi-trash"></i>
            </button>
        </div>
    `;
    section.appendChild(newRow);
    materialCounter++;
}

function calculateMaterial(id) {
    const qta = parseFloat(document.querySelector(`input[name="materiali[${id}][quantita]"]`).value) || 0;
    const prezzo = parseFloat(document.querySelector(`input[name="materiali[${id}][prezzo_unitario]"]`).value) || 0;
    const totale = qta * prezzo;
    document.getElementById(`materialTotal${id}`).value = totale.toFixed(2);
    document.querySelector(`input[name="materiali[${id}][totale]"]`).value = totale.toFixed(2);
}

// Calcola anche il primo materiale
document.querySelector('input[name="materiali[0][quantita]"]').onchange = function() {
    const qta = parseFloat(this.value) || 0;
    const prezzo = parseFloat(document.querySelector('input[name="materiali[0][prezzo_unitario]"]').value) || 0;
    document.querySelector('input[name="materiali[0][totale]"]').value = (qta * prezzo).toFixed(2);
};
document.querySelector('input[name="materiali[0][prezzo_unitario]"]').onchange = function() {
    const qta = parseFloat(document.querySelector('input[name="materiali[0][quantita]"]').value) || 0;
    const prezzo = parseFloat(this.value) || 0;
    document.querySelector('input[name="materiali[0][totale]"]').value = (qta * prezzo).toFixed(2);
};

function deleteActivity(id) {
    if (!confirm('Sei sicuro di voler eliminare questa attività?')) return;
    
    fetch(`/work-orders/delete-activity/${id}`, {
        method: 'POST'
    }).then(response => {
        if (response.ok) {
            location.reload();
        } else {
            alert('Errore nell\'eliminazione');
        }
    });
}
</script>

<%- include('../partials/footer') %>
